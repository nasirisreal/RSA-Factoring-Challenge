#!/usr/bin/python3

import sys
import time
import signal
import concurrent.futures


class TimeoutError(Exception):
    pass


def signal_handler(signum, frame):
    raise TimeoutError("Time limit exceeded")


def factorize(num, timeout=5):
    '''Takes a number as input and returns its factors.
    Args:
        num: input integer.
        timeout: maximum time to spend on factorization, in seconds.
    Return: A tuple of two factors if the number is not a prime.
            None if the number is prime.
    '''
    signal.signal(signal.SIGALRM, signal_handler)
    signal.alarm(timeout)
    try:
        for i in range(2, int(num**0.5)+1):
            if num % i == 0:
                return (i, num//i)
    except TimeoutError:
        return None
    finally:
        signal.alarm(0)
    return None


def factorize_numbers(numbers, timeout=5):
    with concurrent.futures.ThreadPoolExecutor() as executor:
        futures = [executor.submit(factorize, num, timeout) for num in numbers]
        for future, num in zip(futures, numbers):
            factors = future.result()
            if factors:
                print(f"{num}={factors[0]}*{factors[1]}")


if __name__ == "__main__":
    '''Reads the input file and factorizes each number.
    '''
    if len(sys.argv) != 2:
        print("Usage: factors <file>")
        exit()

    input_file = sys.argv[1]

    try:
        with open(input_file, 'r') as f:
            lines = (int(line.strip()) for line in f)
    except FileNotFoundError:
        print("File not found")
        exit()
    except ValueError:
        print("Invalid input")
        exit()

    start_time = time.monotonic()
    factorize_numbers(lines)
    elapsed_time = time.monotonic() - start_time
    print(f"Elapsed time: {elapsed_time:.2f} seconds")
